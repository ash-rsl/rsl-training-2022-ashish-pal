<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/twenty_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="50dp"/>


    <FrameLayout
        android:id="@+id/university_frameLayout"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/twenty_percent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <!--Imageview for University image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:alpha="0.6"
            android:src="@drawable/university" />

        <!--TextView for university name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="University Of Mumbai"
            android:textColor="@color/design_default_color_error"
            android:textSize="20dp" />

    </FrameLayout>

    <!-- Three ImageViews for images of top achievers -->


    <ImageView
        android:id="@+id/image_ablus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/student"
        app:layout_constraintEnd_toStartOf="@id/image_ron"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/space_guideline"
        app:layout_constraintTop_toBottomOf="@id/university_frameLayout" />

    <!--Image of Ron -->
    <ImageView
        android:id="@+id/image_ron"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/student"
        app:layout_constraintEnd_toStartOf="@id/image_harry"
        app:layout_constraintStart_toEndOf="@id/image_ablus"
        app:layout_constraintTop_toBottomOf="@id/university_frameLayout" />

    <!--Image of harry potter-->
    <ImageView
        android:id="@+id/image_harry"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="68dp"
        android:scaleType="fitXY"
        android:src="@drawable/student"
        app:layout_constraintEnd_toStartOf="@id/space_end_guideline"
        app:layout_constraintStart_toEndOf="@id/image_ron"
        app:layout_constraintTop_toBottomOf="@id/university_frameLayout" />

    <!--Relative Layout for displaying names of achievers-->
    <RelativeLayout
        android:id="@+id/toppers_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"

        app:layout_constraintStart_toStartOf="@+id/space_guideline"
        app:layout_constraintTop_toBottomOf="@id/image_ablus">

        <!--TextView for first topper name-->
        <TextView
            android:id="@+id/text_ablus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1_ablus_potter"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            />

        <!--TextView for second topper name-->
        <TextView
            android:id="@+id/text_ron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_ablus"
            android:text="@string/_2_ron_weasly"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            />

        <!--TextView for third topper name-->
        <TextView
            android:id="@+id/text_harry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_ron"
            android:text="@string/_3_harry_potter"
            android:textSize="20dp"

            />
    </RelativeLayout>

    <!--TextView for subjects_mastered -->
    <TextView
        android:id="@+id/text_sub_mastered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subjects_mastered"
        app:layout_constraintTop_toBottomOf="@id/toppers_relative_layout"
        android:layout_marginTop="80dp"

        android:textSize="20dp"
        />

    <!--HorizontalScrollView for subjects -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/text_sub_mastered">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maths"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/science"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/polity"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/science"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/economics"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>